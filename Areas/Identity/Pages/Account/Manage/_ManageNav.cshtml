@{
    var activePage = ViewContext.RouteData.Values["page"]?.ToString()?.ToLower();
    string activeClass(string page) => activePage == page.ToLower() ? "active" : "";
}

<style>
    .manage-nav {
        background-color: #111;
        padding: 1rem;
        font-family: 'Roboto Mono', monospace;
    }

        .manage-nav a {
            display: block;
            padding: 8px;
            color: #33ff33;
            text-decoration: none;
            font-weight: bold;
        }

            .manage-nav a.active,
            .manage-nav a:hover {
                background-color: #444;
                color: white;
            }
</style>

<div class="manage-nav">
    <a asp-page="./Index" class="@activeClass("/account/manage/index")">Profile</a>
    <a asp-page="./Email" class="@activeClass("/account/manage/email")">Email</a>
    <a asp-page="./ChangePassword" class="@activeClass("/account/manage/changepassword")">Password</a>
    <a asp-page="./PersonalData" class="@activeClass("/account/manage/personaldata")">Personal data</a>
</div>
