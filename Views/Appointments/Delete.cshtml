@model HighlandTechSolutions.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<h4>Are you sure you want to delete this appointment?</h4>

<dl class="row">
    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User?.Name</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">Time</dt>
    <dd class="col-sm-10">@DateTime.Today.Add(Model.Time).ToString("h:mm tt")</dd>

    <dt class="col-sm-2">Services</dt>
    <dd class="col-sm-10">
        @string.Join(", ", Model.AppointmentServices.Select(a => a.Service.Name))
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <!-- input for the appointment ID -->
    <input type="hidden" name="id" value="@Model.Id" />
    @Html.AntiForgeryToken()

    <!-- confirming deletion -->
    <button type="submit" class="btn btn-danger">Delete</button>

    <!-- cancel button to go back to the index page -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


