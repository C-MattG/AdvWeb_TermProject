@model IEnumerable<HighlandTechSolutions.Models.Appointment>

@{
    ViewData["Title"] = "Appointment History";
}

<h1>Appointment History</h1>

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>Appointment ID</th>
            <th>User Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Services</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.User.Name</td>
                <td>@appointment.Date.ToShortDateString()</td>
                <td>@appointment.Time.ToString(@"hh\:mm")</td>
                <td>
                    @if (appointment.AppointmentServices != null && appointment.AppointmentServices.Any())
                    {
                        @string.Join(", ", appointment.AppointmentServices.Select(a => a.Service.Name))
                    }
                    else
                    {
                        <span>No services assigned</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



