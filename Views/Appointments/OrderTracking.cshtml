@model List<HighlandTechSolutions.Models.AppointmentTrackingViewModel>

@{
    ViewData["Title"] = "Order Tracking";
}

<h2>Order Tracking</h2>

@if (!Model.Any())
{
    <p>You have no appointments yet.</p>
}
else
{
    <table class="table table-dark table-bordered mt-3">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>Services</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.Date.ToString("MM/dd/yyyy")</td>
                    <td>@appt.Time.ToString(@"hh\:mm")</td>
                    <td>@appt.Status</td>
                    <td>
                        <ul>
                            @foreach (var svc in appt.Services)
                            {
                                <li>@svc</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
